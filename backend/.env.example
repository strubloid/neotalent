# AI Calorie Tracker Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=localhost

# Security Configuration
SESSION_SECRET=your-secure-session-secret-change-in-production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.3

# Application Configuration
MAX_SEARCH_HISTORY=50
MAX_FOOD_INPUT_LENGTH=500
SESSION_COOKIE_MAX_AGE=604800000

# Frontend Configuration
FRONTEND_PATH=../frontend/public
