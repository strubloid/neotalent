{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "node_modules/**",
    "dist/**",
    "sessions/**",
    "*.log",
    "coverage/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exec": "ts-node src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "restartable": "rs",
  "verbose": false
}
